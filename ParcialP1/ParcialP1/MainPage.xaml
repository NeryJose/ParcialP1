<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             x:Class="ParcialP1.MainPage">
   

    <StackLayout  WidthRequest="280" HorizontalOptions="Center">
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="INGRESE LA CANTIDAD!" HorizontalTextAlignment="Center" TextColor="Orange" FontSize="36"/>
        </Frame>
        
        <Entry x:Name="Cantidad" Placeholder="Ingresa Cantidad" BackgroundColor="Black" FontSize="Small" Keyboard="Numeric" />

        <Button Text="convertir"  BackgroundColor="Orange" Clicked="Button_Clicked" />


    </StackLayout>

</ContentPage>
